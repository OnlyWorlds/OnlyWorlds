{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ability",
    "type": "object",
    "properties": {
        "Mechanics": {
            "type": "object",
            "properties": {
                "usage": {
                    "type": "string",
                    "description": "Description of how the ability is used."
                },
                "range": {
                    "type": "integer",
                    "description": "The effective range of the ability, in arbirtrary units."
                },
                "strength": {
                    "type": "integer",
                    "maximum": 100,
                    "description": "Strength or intensity of the ability."
                },
                "effects": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Phenomenal effects generated by the ability",
                    "category": "Phenomenon"
                },
                "utility": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Utility or functional applications of the ability",
                    "category": "Construct"
                }
            }
        },
        "Dynamics": {
            "type": "object",
            "properties": {
                "difficulty": {
                    "type": "string",
                    "description": "Level of difficulty in mastering or using the ability."
                },
                "talent": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Talents or natural aptitudes that enhance this ability",
                    "category": "Trait"
                },
                "enablers": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Objects or tools that enable the use of this ability",
                    "category": "Object"
                },
                "requirements": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Requirements or conditions necessary for using the ability",
                    "category": "Construct"
                }
            }
        },
        "World": {
            "type": "object",
            "properties": {
                "prevalence": {
                    "type": "string",
                    "description": "How common or widespread the ability is within the world."
                },
                "system": {
                    "type": "single-link",
                    "description": "The underlying system or framework that supports this ability",
                    "category": "Phenomenon"
                },
                "construct": {
                    "type": "single-link",
                    "description": "Constructs related to the governance or regulation of the ability",
                    "category": "Construct"
                }
            }
        }
    }
}