{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Phenomenon",
    "type": "object",
    "properties": {
        "Manifest": {
            "type": "object",
            "properties": {
                "presence": {
                    "type": "string",
                    "description": "Observable or detectable existence of the phenomenon."
                },
                "scope": {
                    "type": "string",
                    "description": "Extent or range over which the phenomenon operates or affects."
                },
                "duration": {
                    "type": "integer",
                    "maximum": 0,
                    "description": "Length of time the phenomenon typically lasts."
                },
                "intensity": {
                    "type": "string",
                    "description": "Measure of strength or severity of the phenomenon."
                },
                "empowerments": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Traits or abilities that the phenomenon enhances or bestows.",
                    "category": "Trait"
                },
                "environments": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Specific locations where the phenomenon is known to occur.",
                    "category": "Location"
                },
                "carriers": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Species that can carry or propagate the phenomenon.",
                    "category": "Species"
                }
            }
        },
        "Actuate": {
            "type": "object",
            "properties": {
                "effect": {
                    "type": "string",
                    "description": "Direct effects or outcomes generated by the phenomenon."
                },
                "catalysts": {
                    "type": "single-link",
                    "description": "Objects that initiate or enhance the phenomenon.",
                    "category": "Object"
                },
                "wielders": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Individuals capable of controlling or utilizing the phenomenon.",
                    "category": "Character"
                },
                "handlers": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Organizations or institutions responsible for managing or researching the phenomenon.",
                    "category": "Institution"
                },
                "enablers": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Individuals who enable or support the manifestation of the phenomenon.",
                    "category": "Character"
                },
                "triggers": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Constructs that act as triggers to activate or trigger the phenomenon.",
                    "category": "Construct"
                },
                "affinity": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Related phenomena that share characteristics or are influenced by this phenomenon.",
                    "category": "Phenomenon"
                }
            }
        }
    }
}