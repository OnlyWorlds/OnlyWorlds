{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ability",
    "type": "object",
    "properties": {
        "Base": {
            "ID": {
                "type": "string",
                "description": "Unique identifier for the element, uuidv7 format"
            },
            "Name": {
                "type": "string",
                "description": "Name of the element."
            },
            "Description": {
                "type": "string",
                "description": "Detailed description of the element."
            },
            "Supertype": {
                "type": "string",
                "description": "The supertype category to which the element belongs."
            },
            "Subtype": {
                "type": "string",
                "description": "The subtype category under which the element is further classified."
            },
            "Image_URL": {
                "type": "string",
                "description": "URL to an image representing the element."
            }
        },
        "Mechanics": {
            "type": "object",
            "properties": {
                "usage": {
                    "type": "string",
                    "description": "Description of how the ability is used."
                },
                "range": {
                    "type": "integer",
                    "maximum": 0,
                    "description": "The effective range of the ability, in appropriate units."
                },
                "strength": {
                    "type": "integer",
                    "maximum": 100,
                    "description": "Strength or intensity of the ability."
                },
                "effects": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Phenomenal effects generated by the ability, links to Phenomenon entities.",
                    "category": "Phenomenon"
                },
                "utility": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Utility or functional applications of the ability, links to Construct entities.",
                    "category": "Construct"
                }
            }
        },
        "Dynamics": {
            "type": "object",
            "properties": {
                "difficulty": {
                    "type": "string",
                    "description": "Level of difficulty in mastering or using the ability."
                },
                "talent": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Talents or natural aptitudes that enhance this ability, links to Trait entities.",
                    "category": "Trait"
                },
                "enablers": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Objects or tools that enable the use of this ability, links to Object entities.",
                    "category": "Object"
                },
                "requirements": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Requirements or conditions necessary for using the ability, links to Construct entities.",
                    "category": "Construct"
                }
            }
        },
        "World": {
            "type": "object",
            "properties": {
                "prevalence": {
                    "type": "string",
                    "description": "How common or widespread the ability is within the world."
                },
                "system": {
                    "type": "single-link",
                    "description": "The underlying system or framework that supports this ability, link to a Phenomenon entity.",
                    "category": "Phenomenon"
                },
                "construct": {
                    "type": "single-link",
                    "description": "Constructs related to the governance or regulation of the ability, link to a Construct entity.",
                    "category": "Construct"
                }
            }
        }
    }
}