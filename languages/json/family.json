{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Family",
    "type": "object",
    "properties": {
        "Community": {
            "type": "object",
            "properties": {
                "spirit": {
                    "type": "string",
                    "description": "The core values or ethos of the family."
                },
                "alliances": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Allied families or entities connected to this family.",
                    "category": "Family"
                },
                "rivalries": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Rival families or entities opposed to this family.",
                    "category": "Family"
                }
            }
        },
        "Lineage": {
            "type": "object",
            "properties": {
                "history": {
                    "type": "string",
                    "description": "The historical background of the family."
                },
                "ancestors": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Ancestors and significant forebears of the family.",
                    "category": "Character"
                },
                "traits": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Character traits commonly found among family members.",
                    "category": "Trait"
                },
                "abilities": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Special abilities or powers prevalent in the family.",
                    "category": "Ability"
                },
                "languages": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Languages spoken by family members.",
                    "category": "Language"
                }
            }
        },
        "World": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "description": "The current social or political status of the family."
                },
                "competition": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Competing institutions or entities.",
                    "category": "Institution"
                },
                "administrates": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Institutions or domains under the family's administration.",
                    "category": "Institution"
                },
                "creatures": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Creatures associated with or owned by the family.",
                    "category": "Creature"
                }
            }
        },
        "Legacy": {
            "type": "object",
            "properties": {
                "traditions": {
                    "type": "string",
                    "description": "Cultural or familial traditions passed down through generations."
                },
                "estate": {
                    "type": "single-link",
                    "description": "Primary residence or land owned by the family.",
                    "category": "Location"
                },
                "heirlooms": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Valuable or significant objects passed down within the family.",
                    "category": "Object"
                }
            }
        }
    }
}