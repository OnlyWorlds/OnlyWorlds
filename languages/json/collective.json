{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Collective",
    "type": "object",
    "properties": {
        "Base": {
            "ID": {
                "type": "string",
                "description": "Unique identifier for the element, uuidv7 format"
            },
            "Name": {
                "type": "string",
                "description": "Name of the element."
            },
            "Description": {
                "type": "string",
                "description": "Detailed description of the element."
            },
            "Supertype": {
                "type": "string",
                "description": "The supertype category to which the element belongs."
            },
            "Subtype": {
                "type": "string",
                "description": "The subtype category under which the element is further classified."
            },
            "Image_URL": {
                "type": "string",
                "description": "URL to an image representing the element."
            }
        },
        "Formation": {
            "type": "object",
            "properties": {
                "composition": {
                    "type": "string",
                    "description": "The structural makeup or composition of the collective."
                },
                "count": {
                    "type": "integer",
                    "maximum": 0,
                    "description": "The number of entities or members in the collective."
                },
                "formation_date": {
                    "type": "integer",
                    "maximum": 0,
                    "description": "The date the collective was formed, represented as an integer (e.g., YYYYMMDD)."
                },
                "operator": {
                    "type": "single-link",
                    "description": "The institution or entity operating or managing the collective, link to an Institution entity.",
                    "category": "Institution"
                },
                "equipment": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Equipment or tools used by the collective, links to Construct entities.",
                    "category": "Construct"
                }
            }
        },
        "Agency": {
            "type": "object",
            "properties": {
                "activity": {
                    "type": "string",
                    "description": "Main activities or actions undertaken by the collective."
                },
                "temperance": {
                    "type": "string",
                    "description": "The level of restraint or moderation practiced by the collective."
                },
                "skills": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Skills or abilities prevalent within the collective, links to Ability entities.",
                    "category": "Ability"
                },
                "rituals": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Rituals or customary practices observed by the collective, links to Construct entities.",
                    "category": "Construct"
                }
            }
        },
        "World": {
            "type": "object",
            "properties": {
                "species": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Species that make up the collective, links to Species entities.",
                    "category": "Species"
                },
                "characters": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Characters who are part of the collective, links to Character entities.",
                    "category": "Character"
                },
                "creatures": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Creatures associated with the collective, links to Creature entities.",
                    "category": "Creature"
                },
                "phenomena": {
                    "type": "multi-link",
                    "items": {
                        "type": "string"
                    },
                    "description": "Phenomena connected or significant to the collective, links to Phenomenon entities.",
                    "category": "Phenomenon"
                }
            }
        }
    }
}